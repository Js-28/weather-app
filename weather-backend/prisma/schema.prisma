generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String?   
  provider       String?
  subscribedCity String?    // NEW: store the currently subscribed city
  createdAt      DateTime @default(now())
}
